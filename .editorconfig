# 顶层配置，遇到 root=true 停止向上搜索
root = true

# 针对所有文件生效
[*]
charset = utf-8                        # 统一字符集为 UTF-8 :contentReference[oaicite:0]{index=0}
end_of_line = lf                       # 使用 Unix 风格换行 (LF) :contentReference[oaicite:1]{index=1}
insert_final_newline = true            # 文件末尾总是以换行符结尾 :contentReference[oaicite:2]{index=2}
trim_trailing_whitespace = true        # 去除行尾多余空白 :contentReference[oaicite:3]{index=3}
indent_style = space                   # 使用空格缩进 :contentReference[oaicite:4]{index=4}
indent_size = 2                        # 缩进宽度设为 2 空格（符合 React 社区常见约定） :contentReference[oaicite:5]{index=5}

# 对 Markdown 文件关闭行尾空白自动修剪
[*.md]
trim_trailing_whitespace = false       # README、文档中可能需要有意的空行 :contentReference[oaicite:6]{index=6}